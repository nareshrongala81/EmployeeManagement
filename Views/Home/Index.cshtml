@{
    ViewBag.Title = "Login - Employee Management";
}

<main class="d-flex align-items-center justify-content-center" style="min-height:80vh;">
    <div class="card shadow-lg p-4" style="width: 400px; border-radius: 15px;">
        <h3 class="text-center mb-4 text-primary fw-bold">User Login</h3>

        @using (Html.BeginForm("Login", "Account", FormMethod.Post))
        {
            <div class="mb-3">
                @Html.Label("Email Address", htmlAttributes: new { @class = "form-label fw-semibold" })
                @Html.TextBox("EmailId", null, new { @class = "form-control", placeholder = "Enter your email" })
            </div>

            <div class="mb-3">
                @Html.Label("Password", htmlAttributes: new { @class = "form-label fw-semibold" })
                @Html.Password("Password", null, new { @class = "form-control", placeholder = "Enter your password" })
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-primary fw-bold">Login</button>
            </div>
        }

        <div class="text-center mt-3">
            <p>
                Don’t have an account?
                @Html.ActionLink("Sign Up", "Signup", "Account", null, new { @class = "text-decoration-none fw-semibold" })
            </p>
        </div>
    </div>
</main>
